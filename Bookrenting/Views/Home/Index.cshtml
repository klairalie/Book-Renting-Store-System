@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Alpine.js for slideshow -->
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x/dist/cdn.min.js" defer></script>

<div class="flex items-center justify-center min-h-[80vh] px-6 py-12">
  <div class="text-center max-w-5xl mx-auto space-y-16">

    <!-- Hero Section -->
    <section class="py-20 px-6 text-center">
  <h1 class="text-4xl sm:text-6xl md:text-7xl font-bold text-black leading-tight mb-8">
    Welcome to 
    <span class="text-black">Book Renting Store</span>
  </h1>

  <p class="text-base sm:text-lg md:text-xl text-gray-700 leading-relaxed max-w-2xl mx-auto mb-12">
    Discover, rent, and manage your favorite books with ease.  
    Start your reading journey today and unlock a world of stories at your fingertips.
  </p>

  <div class="flex flex-col sm:flex-row justify-center gap-6">
    <a asp-controller="Books" asp-action="Index"
       class="px-6 py-3 bg-gray-900 text-white font-medium rounded-lg shadow hover:bg-gray-700 transition duration-300">
      Explore Books
    </a>
    <a asp-controller="Account" asp-action="Register"
       class="px-6 py-3 border border-gray-800 text-gray-800 font-medium rounded-lg shadow hover:bg-gray-100 transition duration-300">
      Join Now
    </a>
  </div>
</section>


    <!-- Featured Books Carousel -->
    <section x-data="bookCarousel()" x-init="init()" class="w-full">
      <h2 class="text-2xl sm:text-3xl font-semibold text-gray-800 mb-6">Featured Books</h2>
      <div class="relative overflow-hidden rounded-lg shadow-lg">
        <template x-for="(book, index) in books" :key="index">
          <div 
            x-show="currentIndex === index"
            class="w-full transition-opacity duration-700"
          >
            <img 
              :src="book.imageUrl" 
              :alt="book.title" 
              class="w-full h-64 sm:h-80 md:h-96 object-cover"
            >
            <div class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black via-transparent to-transparent px-4 py-3">
              <h3 class="text-white text-lg sm:text-xl font-medium" x-text="book.title"></h3>
            </div>
          </div>
        </template>
       <button 
  x-on:click="prev()" 
  class="absolute top-1/2 left-2 -translate-y-1/2 bg-gray-800 bg-opacity-50 text-white p-2 rounded-full hover:bg-opacity-75 transition">
  ‹
</button>

<button 
  x-on:click="next()" 
  class="absolute top-1/2 right-2 -translate-y-1/2 bg-gray-800 bg-opacity-50 text-white p-2 rounded-full hover:bg-opacity-75 transition">
  ›
</button>

      </div>
    </section>

    <!-- Feature Highlights -->
    <section class="grid grid-cols-1 sm:grid-cols-3 gap-10 text-center">
      <div class="flex flex-col items-center">
        <svg class="w-12 h-12 text-gray-800 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v8m0 0l-2-2m2 2l2-2M4 6h16M4 6v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V6" />
        </svg>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Wide Selection</h3>
        <p class="text-gray-600">Thousands of books across genres. Find your next favorite.</p>
      </div>
      <div class="flex flex-col items-center">
        <svg class="w-12 h-12 text-gray-800 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Flexible Rentals</h3>
        <p class="text-gray-600">Rent books for days or weeks. Return when you are done.</p>
      </div>
      <div class="flex flex-col items-center">
        <svg class="w-12 h-12 text-gray-800 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-3-3.85M9 20H4v-2a4 4 0 013-3.85M12 12a4 4 0 100-8 4 4 0 000 8zm0 2c-3 0-5 2-5 4v2h10v-2c0-2-2-4-5-4z" />
        </svg>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Community Reviews</h3>
        <p class="text-gray-600">Hear what others say—real feedback, honest opinions.</p>
      </div>
    </section>

    <!-- Testimonial -->
    @* <section class="max-w-2xl mx-auto">
      <blockquote class="border-l-4 border-gray-800 pl-6 italic text-gray-700 mb-12">
        “This service has transformed how I read — so convenient, so many options, and the UI is beautiful. Renting a book has never been this seamless.” 
        <footer class="mt-4 text-gray-500">— Jamie Doe, Avid Reader</footer>
      </blockquote>
    </section> *@

    <!-- Secondary Call-to-Action -->
    <div>
      @* <a asp-controller="Books" asp-action="Popular"
         class="px-8 py-4 bg-gray-800 text-white font-semibold rounded-lg shadow hover:bg-gray-700 transition duration-300">
        View Popular Books
      </a> *@
    </div>

  </div>
</div>

<script>
  function bookCarousel() {
    return {
      currentIndex: 0,
      books: [
        { title: 'Atomic Habits', imageUrl: 'https://images.unsplash.com/photo-1524995997946-a1c2e315a42f' },
        { title: 'The Great Gatsby', imageUrl: 'https://images.unsplash.com/photo-1544936207-75a2e7a5e1ad' },
        { title: 'Educated', imageUrl: 'https://images.unsplash.com/photo-1512820790803-83ca734da794' },
        { title: 'To Kill a Mockingbird', imageUrl: 'https://images.unsplash.com/photo-1532012197267-da84d127e765' }
      ],
      prev() {
        this.currentIndex = (this.currentIndex - 1 + this.books.length) % this.books.length;
      },
      next() {
        this.currentIndex = (this.currentIndex + 1) % this.books.length;
      },
      init() {
        setInterval(() => this.next(), 5000);
      }
    }
  }
</script>
