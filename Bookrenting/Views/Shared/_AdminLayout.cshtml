@* Views/Shared/_AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BookRenting Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
   <style>
    /* Collapsible Sidebar */
  .sidebar {
    width: 5.5rem; /* collapsed (increased so icons show) */
    transition: width 0.3s ease;
    overflow-x: hidden;
    overflow-y: auto;
}
.sidebar:hover {
    width: 16rem; /* expanded */
}


    /* Always show icons */
    .sidebar i {
        min-width: 2.5rem;
    }

    .sidebar .label {
        display: none;
    }
    .sidebar:hover .label {
        display: inline;
    }

    .sidebar a {
        justify-content: center;
    }
    .sidebar:hover a {
        justify-content: flex-start;
    }

    .sidebar-header {
        justify-content: center;
    }
    .sidebar:hover .sidebar-header {
        justify-content: flex-start;
    }
</style>

</head>
<body class="bg-[#fdfcf8] font-sans">
    <!-- Sidebar + Main Content -->
    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="sidebar bg-[#2d2a26] text-white shadow-lg flex flex-col">
            <!-- Sidebar Header -->
            <div class="sidebar-header flex items-center h-16 px-4 py-20 border-b border-[#444]">
                <i data-lucide="book-open" class="w-16 h-16"></i>
                <span class="label ml-3 text-lg font-bold">BookRenting Admin</span>
            </div>

            <!-- Sidebar Navigation -->
            <nav class="flex-1 p-4 space-y-14 mt-6">
                <a href="/Admin/AdminDashboard" 
                   class="flex items-center p-4 rounded hover:bg-[#3d3a35] transition">
                    <i data-lucide="layout-dashboard" class="w-8 h-8"></i>
                    <span class="label ml-3">Dashboard</span>
                </a>
                <a href="/Books" 
                   class="flex items-center p-4 rounded hover:bg-[#3d3a35] transition">
                    <i data-lucide="book" class="w-8 h-8"></i>
                    <span class="label ml-3">Manage Books</span>
                </a>
                <a href="/Admin/ApprovedRents" 
                   class="flex items-center p-4 rounded hover:bg-[#3d3a35] transition">
                    <i data-lucide="book" class="w-8 h-8"></i>
                    <span class="label ml-3">Manage Rents</span>
                </a>
                <!-- Settings Dropdown -->
                <div x-data="{ open: false }" class="relative">
                    <button @@click="open = !open" 
                            class="flex items-center w-full p-4 rounded hover:bg-[#3d3a35] transition focus:outline-none">
                        <i data-lucide="settings" class="w-8 h-8"></i>
                        <span class="label ml-3">Settings</span>
                        <i data-lucide="chevron-down" class="w-4 h-4 ml-auto"></i>
                    </button>
                    <div x-show="open" @@click.away="open = false" 
                         class="mt-2 space-y-2 bg-[#3a3732] rounded shadow-lg p-2 flex flex-col">
                        <a href="/Admin/Profile" class="px-3 py-2 rounded hover:bg-[#4a4742] transition text-white">
                            Profile & Password
                        </a>
                        <a href="/Admin/Reports" class="px-3 py-2 rounded hover:bg-[#4a4742] transition text-white">
                            Reports
                        </a>
                        <a href="/Admin/Users" class="px-3 py-2 rounded hover:bg-[#4a4742] transition text-white">
                            Users Account
                        </a>
                    </div>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-y-auto">
            <!-- Main Header -->
            <header class="flex items-center h-16 px-6 bg-white shadow border-b justify-between py-16">
                <h1 class="text-3xl font-semibold text-[#2d2a26]">
                    Welcome, @User.Identity?.Name!
                </h1>
                <a href="/Account/Login"
                   class="px-4 py-2 bg-[#a47148] text-white rounded hover:bg-[#8c5d38] transition">
                    Logout
                </a>
            </header>

            <!-- Rendered Body -->
            <main class="p-6">
                @RenderBody()
            </main>

            @RenderSection("Scripts", required: false)
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script>
        lucide.createIcons(); // activate icons
    </script>
</body>
</html>
