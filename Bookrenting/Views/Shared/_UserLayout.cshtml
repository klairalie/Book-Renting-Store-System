@* Views/Shared/_UserLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookRenting</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-[#fdfcf7] font-sans">
<div class="flex h-screen">

    <!-- Sidebar -->
    <aside class="sidebar bg-[#5b4636] text-white shadow-xl flex flex-col transition-all duration-300">

        <!-- Header -->
        <div class="sidebar-header flex items-center h-20 px-4 border-b border-[#4a3a2c]">
            <i data-lucide="book-open" class="w-10 h-10"></i>
            <span class="label ml-3 text-lg font-bold">Read Books Whole Heartedly</span>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-4 py-6 space-y-6">
            <a href="/RentingStore/Dashboard" class="nav-btn">
                <i data-lucide="home" class="icon"></i>
                <span class="label ml-3">Dashboard</span>
            </a>

            <a href="/RentingStore/ReturnBook" class="nav-btn">
                <i data-lucide="book-open" class="icon"></i>
                <span class="label ml-3">Return Books</span>
            </a>

            <a href="/RentingStore/Browse" class="nav-btn">
                <i data-lucide="library" class="icon"></i>
                <span class="label ml-3">Browse Catalog</span>
            </a>

            <a href="/Account/Settings" class="nav-btn">
                <i data-lucide="settings" class="icon"></i>
                <span class="label ml-3">Settings</span>
            </a>
        </nav>

        <!-- Bottom Logout -->
        <div class="px-4 py-5 border-t border-[#4a3a2c]">
            <a href="/Account/Login" class="logout-btn">
                <i data-lucide="log-out" class="icon"></i>
                <span class="label ml-3">Logout</span>
            </a>
        </div>

    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-y-auto">
        <main class="p-6">
            @RenderBody()
        </main>
        @RenderSection("Scripts", required: false)
    </div>

</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script> lucide.createIcons(); </script>

<style>
/* Sidebar default collapsed */
.sidebar {
    width: 5.2rem;
    overflow-x: hidden;
    overflow-y: auto;
}

/* Expanded on hover */
.sidebar:hover {
    width: 16rem;
}

/* Hide labels when collapsed */
.sidebar .label {
    display: none;
}
.sidebar:hover .label {
    display: inline;
}

/* Icon styling */
.icon {
    width: 1.8rem;
    height: 1.8rem;
    min-width: 1.8rem;
}

/* Button styling */
.nav-btn, .logout-btn {
    display: flex;
    align-items: center;
    padding: 1rem;
    background: transparent;
    border-radius: 0.5rem;
    transition: background 0.2s;
}

/* Hover animation */
.nav-btn:hover,
.logout-btn:hover {
    background-color: #4a3a2c;
}

/* Center icons when collapsed */
.sidebar a i {
    margin: 0 auto;
}
.sidebar:hover a i {
    margin: 0;
}
</style>

</body>
</html>
