@model IEnumerable<BookRenting.Models.Book>
@{
    ViewData["Title"] = "Manage Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-2xl font-bold mb-6 text-gray-800">Manage Books</h2>

<!-- Add Button -->
<a class=" mb-7 inline-flex items-center gap-1 px-3 py-1.5 bg-green-600 text-white rounded-md hover:bg-green-700 shadow-sm transition duration-200"
   asp-action="Create">
    <i data-lucide="plus" class="w-4 h-4"></i>
    <span class="text-sm">Add Book</span>
</a>


<!-- Table -->
<div class="overflow-x-auto bg-white rounded-lg shadow-md border">
    <table class="min-w-full text-sm text-left text-gray-700">
        <thead class="bg-gray-100 text-gray-900 uppercase text-xs font-semibold">
            <tr>
                <th class="px-6 py-3">Reference</th>
                <th class="px-6 py-3">Title</th>
                <th class="px-6 py-3">Author</th>
                <th class="px-6 py-3">Genre</th>
                <th class="px-6 py-3">Status</th>
                <th class="px-6 py-3">Price</th>
                <th class="px-6 py-3">Stocks</th>
                <th class="px-6 py-3 text-center">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            @foreach(var book in Model)
            {
                <tr class="hover:bg-gray-50 transition duration-150">
                    <td class="px-6 py-3">@book.ReferenceNumber</td>
                    <td class="px-6 py-3 font-medium">@book.Title</td>
                    <td class="px-6 py-3">@book.Author</td>
                    <td class="px-6 py-3">@book.Genre</td>
                    <td class="px-6 py-3">
                        <span class="px-2 py-1 text-xs rounded-full 
                            @(book.Status.Contains("Digital") ? "bg-blue-100 text-blue-700" : "bg-green-100 text-green-700")">
                            @book.Status
                        </span>
                    </td>
                    <td class="px-6 py-3">â‚±@book.Price.ToString("F2")</td>
                    <td class="px-6 py-3">@book.Stocks</td>
                    <td class="px-6 py-3 flex justify-center space-x-2">
                        <!-- Edit -->
                        <a class="flex items-center gap-1 px-3 py-1 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition duration-200 shadow-sm"
                           asp-action="Edit" asp-route-id="@book.Id">
                            <i data-lucide="pencil" class="w-4 h-4"></i>
                            <span>Edit</span>
                        </a>

                        <!-- Delete -->
                        <form asp-action="Delete" asp-route-id="@book.Id" method="post" class="inline">
                            <button type="submit"
                                    onclick="return confirm('Are you sure you want to delete this book?');"
                                    class="flex items-center gap-1 px-3 py-1 bg-red-600 text-white rounded-md hover:bg-red-700 transition duration-200 shadow-sm">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                <span>Delete</span>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <script>
        lucide.createIcons();
    </script>
}
