@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="min-h-screen">
    <!-- Header inside UserLayout handles the title -->
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-[#4b3832]">Hi! @User.Identity?.Name! Welcome to your Dashboard!</h1>
        <p class="text-gray-600">Explore your books, manage your rentals, and discover more.</p>
    </div>

    <!-- Cards (reuse what you had) -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- My Books -->
        <div class="bg-white rounded-xl shadow-md border border-[#e8e5d9] p-6 hover:shadow-lg transition duration-200">
            <div class="flex items-center gap-3 mb-4">
                <i data-lucide="book-open" class="w-6 h-6 text-[#a47148]"></i>
                <h2 class="text-lg font-semibold text-[#4b3832]">My Books</h2>
            </div>
            <p class="text-sm text-gray-600 mb-4">View and manage your rented or purchased books.</p>
            <a href="/RentingStore/MyBooks" class="px-4 py-2 bg-[#a47148] text-white rounded hover:bg-[#8c5d38] transition">
                Go to My Books
            </a>
        </div>

        <!-- Browse Catalog -->
        <div class="bg-white rounded-xl shadow-md border border-[#e8e5d9] p-6 hover:shadow-lg transition duration-200">
            <div class="flex items-center gap-3 mb-4">
                <i data-lucide="library" class="w-6 h-6 text-[#a47148]"></i>
                <h2 class="text-lg font-semibold text-[#4b3832]">Browse Catalog</h2>
            </div>
            <p class="text-sm text-gray-600 mb-4">Discover new arrivals and search for your favorite titles.</p>
            <a href="/Books/BrowseCatalog" class="px-4 py-2 bg-[#a47148] text-white rounded hover:bg-[#8c5d38] transition">
                Browse Now
            </a>
        </div>

        <!-- Account Settings -->
        <div class="bg-white rounded-xl shadow-md border border-[#e8e5d9] p-6 hover:shadow-lg transition duration-200">
            <div class="flex items-center gap-3 mb-4">
                <i data-lucide="settings" class="w-6 h-6 text-[#a47148]"></i>
                <h2 class="text-lg font-semibold text-[#4b3832]">Account Settings</h2>
            </div>
            <p class="text-sm text-gray-600 mb-4">Update your profile, password, and preferences.</p>
            <a href="/Account/Settings" class="px-4 py-2 bg-[#a47148] text-white rounded hover:bg-[#8c5d38] transition">
                Manage Account
            </a>
        </div>
    </div>
</div>
